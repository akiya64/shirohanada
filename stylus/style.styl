/* major breakpoint */
breakpoint = 768px

// postCSS library //
@import "nib"

// import normalize,icon-font,color const module//
@import "_sanitize"
@import "_icon-font"
@import "_color"

/*! Main Section
   Follow Architecture Every Declaration Just Once
   ref 'https://developers.google.com/speed/articles/optimizing-css' */

/* Base */
body
        font-family Hiragino Kaku Gothic ProN,Meiryo,sans-serif
        letter-spacing 0.05rem
        line-height 1.6
        margin 0 auto
        width 100%
        max-width 1240px

/* Layout */
/* looks 3columns but HTML is 2 Column */
.page-content
.page-content-footer
.entry-title
        width 100%


.entry-content img
.entry-content *
        max-width 100%

.entry-content img
        height auto

.sidebar
        margin-left 1%

.share-links
        display flex
        justify-content space-around

.wp-caption
        max-width 100%

.c-button-gopostheader
.share-links
        width 38%

.page
        .c-button-gopostheader
        .share-links
                width 50%


/* post-date and post-category looks 1row */
.entry-header > p
        display inline

/* apply style for h tag once for POST and Page
 * some h.class  ovewrite style another section */
h1,h2,h3,h4,h5,h6
        font-size 1.62rem
        color nakano-h
        margin 2rem 0 1rem
        padding-left .75rem
        border-left solid 3px nakano-h
        clear both

.main-contents
article
        display flex
        flex-wrap wrap
/* pubdate and header column is nothing in 404.php article */
.page-notfound
        display block

/* LayLarge Display ; looks 2 column in Article */
@media (min-width:breakpoint)

        /* site-name and site-description looks 1row */
        .entries
                h1,p
                        display inline

        .site-header
                margin-right 0.75rem

        .site-header
        .site-footer
                text-align right

        .site-name
                font-size 72px

        article
                padding .5rem 1rem 1rem

        .articles
        .entry-content
        .comments
                width 76%

        .sidebar
        .entry-margin
        .entry-header
                width 23%

        .entry-margin
        .entry-header
                margin-right 1%

        .entry-header > p
                margin-bottom .3rem

        .entry-content
        .comments
                min-width 560px

        .site-footer > p
                display inline
                margin-left 1rem

        .entry-header
        .site-footer.front
                > p
                        display block

        /* show only less 768px */
        #menu-button
                display none

        .width-half-inlarge
                width 50%

/*  Margin Padding */

/* Over write h tags */
h1.site-name
        margin 0

h2.page-title
h1.entry-title
        margin 0 0 .7rem 0

h2.page-title
        padding 0 .5rem 0 1.5rem

h1.entry-title
        padding 0

h3.comments-header
h3.comment-reply-title
        padding-left 0

/* -contet class is content body posted from WordPress */
.page-content
.entry-content
.page-notfound
        > *:first-child
                margin-top 0

.comments
li + li
        margin-top .6rem

li + li
        border solid 1p hai

.c-button-gopostheader
.share-links
        margin-top 1rem

.icon
        margin-right .4rem

.icon-angle-right
        margin-left .4rem

.pagenation > *
        margin-left .75rem

.move-posts
        a:first-child
                margin-right 1.5rem

.site-description
        margin-right .5rem

article
.page-content-footer ~ p //margin-bottom only for second p tag
        margin-bottom 1rem

.move-posts
        margin-top .5rem

section
.entry-header
.entry-title
        margin-bottom .6rem

.entry-content
.page-content
        p
                margin .75rem 0

.entry-content
.page-content
        ul
        ol
        dl
                margin 1rem
                margin-left 2rem

.entry-content
.page-content
        ul
               list-style-type square

.site-footer
        margin 0.5rem

.sidebar
        padding 0 1rem .8rem

blockquote
        margin .8rem 0
        padding .2rem .75rem
        overflow-wrap break-word

/* Text Align */
.page-content-footer
        text-align right

.wp-caption
.text-centering
        text-align center

/*  Typograghy  */
h1,h2,h3,h4,h5,h6
.site-description
.root-contents
.move-posts
.pagenation
        font-family 'Ubuntu' , sans-serif
        font-weight normal

/*  font-size  */
.page-title
        font-size 2.4rem

.contents-link-title
.entry-title
.widget-title
.share-links
.comment-reply-title
.comments-header
        font-size 1.62rem

.pagenation
.move-posts
        font-size 1.4rem

/* eject icon use as goto top button */
.icon-eject
        font-size 1.5rem
        margin-left .25rem
        vertical-align -0.475rem

.move-posts a > i
        font-size 1.7rem
        vertical-align -0.1rem
        margin 0 .5rem

/* Color
 * ShiroHanada #a3d8f6 */
a:visited
        color maroon

.site-name
a.share-button
a.link-top:link
a.link-top:visited
a.link-top:hover
        color shirohanada

a
a.gotop
a.gotop:visited
.entry-title
        color bright-h

.contents-link-title
.page-title
.widget-title
.pagenation
        color nakano-h

.entry-header i
.icon-share
.site-footer
.site-description
        color hai

.sidebar
.page-content
.page-title
.pagenation
.move-posts
article
        background-color usu-hai

@import "_icon-color"

/* Text Decolation */
a
        &:hover
        &.page-numbers.current
                text-decoration underline

        &:hover
                text-decoration-style dotted

        &.page-numbers.current
                text-decoration-style solid

        &.site-name
        &.share-button
        &.link-top:link
        &.link-top:visited
        &.link-top:hover
        &.button:hover
                text-decoration none

/* Border */
blockquote
        border-left solid 3px #bbb

h1.site-name
h2.page-title
h1.entry-title
h2.widget-title
h3.comments-header
h3.comment-reply-title
        border-left none

/* Table in Entry */
tr + tr
                border-top 1px solid hai

.entry-content
        thead
                background-color #eee

        td
        th
                padding .2rem .5rem

        caption
                text-align left

/* utility class */
.clearfix:after
        content " "
        display block
        clear both

.no-marker
        list-style-type none
        margin-left 0

.margin-left_2rem
        margin-left 2rem

.point
        border-left solid 3px shirohanada
        padding .5rem 0 .5rem 1rem

/* for WordPress class */
.aligncenter
.alignleft
.alignright
        display block

.alignleft
        float left
        margin-right 1rem

.alignright
        float right
        margin-left 1rem

.aligncenter
        margin auto

.wp-caption > p
        padding-top .3rem

.sticky
        border solid 1px shirohanada

/* End Main Section */

/* Parts Section */
/* gravatar */
img[src^="http://www.gravatar.com/avatar/"]
        border-radius .5rem

/* Side Bar */
/* inside sidebar skin */

h2.widget-title
        margin 0 0 0.25rem 0
        padding-left 0

.sidebar
        /* On chrome overflow long text, example url ,1byte japanese kana */
        word-break break-all
        .widget
                margin-bottom 1rem

        ul
                list-style-type none

        li + li
                padding-top .7rem
                margin-top .4rem
                border-top solid 1px hai

        #wp-calendar
                font-size .8rem
                word-break keep-all //date should not break

                th
                        font-weight normal
                        background-color none
                td
                        padding .1rem .3rem
                        text-align center



/*! button */
.button
        font-size 2.4rem
        background none

.show-menu
.show-menu:visited
        color white

.show-menu
        bottom 1rem
        padding .4rem .7rem 0 .7rem
        position fixed
        background-color shirohanada
        border-radius 0 .5rem .5rem 0
        opacity 0.85

.gotop-button
        font-size 2.4em
        bottom 3rem
        padding .6rem .8rem 0 1rem
        position fixed
        border-radius 0 .5rem .5rem 0
        background-color shirohanada

.gotop-button
.gotop-button:visited
        color white
        text-decoration none

.hide-menu-button
        color nakano-h
        padding-top .5rem
        display none
        width 100%
        text-align right

.show
        display block

.hide
        display none

/* over write for mobile */
@media screen and (max-width: breakpoint)
        .articles
        .sidebar
        .entry-title
        .entry-header
        .entry-content
                width 100%

        .c-button-gopostheader
                width 23%
                margin initial
                margin-left .5rem

        .share-links
                width 74% !important
                margin initial

        .site-name
                font-size 2.8rem

        /* Header is white logo above "shirohanada" */
        .site-header .site-name
                text-align center
                background-color shirohanada

        a.link-top:link
        a.link-top:visited
        a.link-top:hover
                color white   // site-logo is top-page link

        h1.site-name
                padding .25rem .5rem

        .site-description
                margin .25rem .5rem

        h1.entry-title.single
        h2.page-title
                margin initial
                font-size 1.62rem

        /* In Article set less padding */
        h1.entry-title.single
                padding 1rem 0

        h2.page-title
                padding 1rem .5rem

        .entry-date
                margin-right 1rem

        article
                margin-bottom 0

        article
                padding 0 .5rem 1rem

        .entry-content
                padding-bottom .75rem

        article + article
                padding-top 1rem
                border-top solid 1px #777

        article img
                max-width 100%
                height auto

        .articles
                margin-bottom 1rem

        .site-footer
                text-align right
                width 90%
                margin-left 9%

        .site-footer.front
                text-align left
                width 100%
                margin-left 0

        .gotop-button
                display none

        .on-top
                position absolute
                box-shadow -1px 1px 1px 2px rgba(0,0,0,0.2)
                top 5px
                right 3px
                width 60%

@import "_comment-form"
@import "_front-page"
@import "_twitter-plugin"
