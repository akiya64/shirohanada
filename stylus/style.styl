/* major breakpoint */
breakpoint = 768px

// postCSS library //
@import "nib"

// import normalize,icon-font,color const module//
@import "_sanitize"
@import "_icon-font"
@import "_color"

/*! Main Section

    'Every Declaration Just Once'
    ref 'https://developers.google.com/speed/articles/optimizing-css'

    Naming rule is 'RSCSS'
    ref 'https://github.com/rstacruz/rscss'
    ref 'http://rscss.io/index.html' */

/* Base */
body
        font-family Hiragino Kaku Gothic ProN,Meiryo,sans-serif
        letter-spacing 0.05rem
        line-height 1.6
        margin 0 auto
        width 100%
        max-width 1240px

/* Layout */
/* looks 3columns but HTML is 2 Column */
.page-content
.page-footer
.entry-title
        width 100%


.entry-content img
.wp-caption
        max-width 100%

.entry-content img
        height auto

.widget-area
        margin-left 1%


.entry-footer
        width 38%

        &.-sharelinks
                display flex
                justify-content space-around

/* post-date and post-category looks 1row */
.entry-header > p
        display inline

/* apply style for h tag once for POST and Page
 * some h.class  ovewrite style another section */
h1,h2,h3,h4,h5,h6
        font-size 1.62rem
        color nakano-h
        margin 2rem 0 1rem
        padding-left .75rem
        border-left solid 3px nakano-h
        clear both

.main-contents
.post
.page
        display flex
        flex-wrap wrap

/* pubdate and header column is nothing in 404.php .post */
.page-notfound
        display block

/* LayLarge Display ; looks 2 column in .post */
@media (min-width:breakpoint)


        .site-header
                margin-right 0.75rem

                /* site-name and site-description looks 1row */
                h1,p
                        display inline

        .site-header
        .site-footer
                text-align right

        .site-name
                font-size 72px

        .post
        .page
                padding .5rem 1rem 1rem

        .article-area
        .entry-content
        .entry-comments
                width 76%

        .widget-area
        .entry-margin
        .entry-header
                width 23%

        .entry-margin
        .entry-header
                margin-right 1%

        .entry-header > p
                margin-bottom .3rem

        .entry-content
        .entry-comments
                min-width 560px

        .site-footer > p
                display inline
                margin-left 1rem

        .entry-header
        .site-footer.front
                > p
                        display block

        /* show only less 768px */
        #menu-button
                display none

        .page > .entry-footer
        ._width-half-inlarge
                width 50%

/*  Margin Padding */

/* Over write h tags */
h1.site-name
        margin 0

h2.page-title
h1.entry-title
        margin 0 0 .7rem 0

h2.page-title
        padding 0 .5rem 0 1.5rem

h1.entry-title
        padding 0

h3.comments-list-header
h3.comment-reply-title
        padding-left 0

/* -contet class is content body posted in WordPress */
.page-content
.entry-content
.page-notfound
        > *:first-child
                margin-top 0

.nav-posts
.entry-comments
li + li
        margin-top .6rem

dt
        border-bottom solid 1px hai

.content-footer
        margin-top 1rem

.icon
        margin-right .4rem

.icon-angle-right
        margin-left .4rem

.pagenation > *
        margin-left .75rem

.move-posts
        a:first-child
                margin-right 1.5rem

.site-description
        margin-right .5rem

.page-footer ~ p //margin-bottom only for second p tag
        margin-bottom 1rem

.post
.page
.widget
.entry-header
.entry-title
        margin-bottom .6rem

.entry-content
.page-content
        p
                margin .75rem 0

/*List style in content */
.entry-content
.page-content
        ul
        ol
                margin 1rem
                margin-left 2rem

        ul
               list-style-type square

        dl
                margin-left 0

                dt
                        display inline-block
                        font-weight bold

                dt + dd
                        margin-top .2rem
                        padding-top .2rem

                dd
                        margin-bottom 1rem

.site-footer
        margin 0.5rem

.move-post *
        padding .25rem 0

.widget-area
        padding 0 1rem .8rem

blockquote
        margin .8rem 0
        padding .2rem .75rem
        overflow-wrap break-word

/*  Typograghy  */
h1,h2,h3,h4,h5,h
.site-description
.root-contents
.move-posts
.pagenation
        font-family 'Ubuntu' , sans-serif
        font-weight normal

/*  font-size  */
.page-title
        font-size 2.4rem

.contents-link-title
.entry-title
.widget-title
.link-icon
.comments-list-header
.comment-reply-title
        font-size 1.62rem

.pagenation
.move-posts
        font-size 1.4rem

.move-posts a > i
        font-size 1.7rem
        vertical-align -0.1rem
        margin 0 .5rem

/* Color
 * ShiroHanada #a3d8f6 */
a:visited
        color maroon

.site-name
a.link-icon
a.link-top:link
a.link-top:visited
a.link-top:hover
        color shirohanada

a
a.gotop
a.gotop:visited
.entry-title
        color bright-h

.contents-link-title
.page-title
.widget-title
.pagenation
        color nakano-h

.entry-header i
.icon-share
.site-footer
.site-description
        color hai

.widget-area
.page-title
.pagenation
.move-post *
.page
.post
        background-color usu-hai

@import "_icon-color"

/* Text Decolation */
a:hover
span.page-numbers.current
                text-decoration underline
a
        &:hover
                text-decoration-style dotted

        &.page-numbers.current
                text-decoration-style solid

        &.site-name
        &.link-icon
        &.link-top:link
        &.link-top:visited
        &.link-top:hover
        &.button:hover
                text-decoration none

/* Border */
blockquote
        border-left solid 3px #bbb

h1.site-name
h2.page-title
h1.entry-title
h2.widget-title
h3.comments-list-header
h3.comment-reply-title
        border-left none

/* Table in Entry */
tr + tr
                border-top 1px solid hai

.entry-content
        thead
                background-color #eee

        td
        th
                padding .2rem .5rem

        caption
                text-align left

/* helper Classes */
.clearfix
        clearfix()

._no-marker
        list-style-type none

._text-alignright
        text-align right

.wp-caption
._text-centering
        text-align center

    margin-left 0

/* for WordPress class */
.aligncenter
.alignleft
.alignright
        display block

.alignleft
        float left
        margin-right 1rem

.alignright
        float right
        margin-left 1rem

.aligncenter
        margin auto

.wp-caption > p
        padding-top .3rem

.sticky
        border solid 1px shirohanada

/* End Main Section */

/* Parts Section */
/* gravatar */
img[src^="http://www.gravatar.com/avatar/"]
        border-radius .5rem

/* Side Bar */
/* inside widget-area skin */

h2.widget-title
        margin 0 0 0.25rem 0
        padding-left 0

.widget-area
        /* On chrome overflow long text, example url ,1byte japanese kana */
        word-break break-all
        .widget
                margin-bottom 1rem

        ul
                list-style-type none

        li + li
                padding-top .7rem
                margin-top .4rem
                border-top solid 1px hai

        #wp-calendar
                width 90%
                margin 0 auto
                word-break keep-all //date should not break

                th
                        font-size .875rem
                        font-weight normal
                        background-color none
                td
                        padding .4rem .3rem .1rem
                        text-align center



/*! button */
.button
        font-size 2.4rem
        background none

.show-menu
.show-menu:visited
        color white

.show-menu
        bottom 1rem
        padding .4rem .7rem 0 .7rem
        position fixed
        background-color shirohanada
        border-radius 0 .5rem .5rem 0
        opacity 0.85

.gotop-button
        font-size 2.4em
        bottom 3rem
        padding .6rem .8rem 0 1rem
        position fixed
        border-radius 0 .5rem .5rem 0
        background-color shirohanada

.gotop-button
.gotop-button:visited
        color white
        text-decoration none

.hide-menu-button
        color nakano-h
        padding-top .5rem
        display none
        width 100%
        text-align right

.show
        display block

.hide
        display none

/* over write for mobile */
@media screen and (max-width: breakpoint)
        .article-area
        .widget-area
        .entry-title
        .entry-header
        .entry-content
                width 100%

        .return-articletop
                width 23%
                margin initial
                margin-left .5rem

        .share-links
                width 74%
                margin initial

        .site-name
                font-size 2.8rem

        /* Header is white logo above "shirohanada" */
        .site-header .site-name
                text-align center
                background-color shirohanada

        a.link-top:link
        a.link-top:visited
        a.link-top:hover
                color white   // site-logo is top-page link

        h1.site-name
                padding .25rem .5rem

        .site-description
                margin .25rem .5rem

        h1.entry-title.single
        h2.page-title
                margin initial
                font-size 1.62rem

        /* In .post set less padding */
        h1.entry-title.single
                padding 1rem 0

        h2.page-title
                padding 1rem .5rem

        .entry-date
        .entry-category
        .entry-tags
                margin-right 1rem

        .post
        .page
                margin-bottom 0
                padding 0 .5rem 1rem

        .entry-content
                padding-bottom .75rem

                img
                        max-width 100%
                        height auto
        .post + .post
                padding-top 1rem
                border-top solid 1px #777

        .site-footer
                text-align right
                width 90%
                margin-left 9%

        .site-footer.front
                text-align left
                width 100%
                margin-left 0

        .gotop-button
                display none

        .on-top
                position absolute
                box-shadow -1px 1px 1px 2px rgba(0,0,0,0.2)
                top 5px
                right 3px
                width 60%

        .widget-area #wp-calendar td
                padding .4rem .2rem .1rem
                font-size .9rem

@import "_comment-form"
@import "_front-page"
