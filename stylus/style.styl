/*
 * BreakPoint Declaration
 */
breakpoint = 600px

// Stylus Library
@import "nib"

/**
 * # Normarize
 */
@import "_sanitize"

body
        line-height 1.8
        margin 0 auto
        width 100%
        max-width 1240px

/**
 * Color variant.
 */

@import "_color"
@import "_icon-font"

/**
 * # Layout
 */
.page > .entry-content
.page > .footer-date
.page > .footer-author
.page-footer
.entry-title
.entry-meta
        width 100%

.excerpt-thumbnail img
.entry-content img
.entry-content iframe
.wp-caption
.gallery-caption
        max-width 100%

.excerpt-thumbnail img
.entry-content img
        height auto

.side-widgets
        margin-left 1%

.entry-footer
        width 38%

.main-contents
.type-post
.type-page
.entry-footer.-sharelinks
.nomatch-contents > .links
        display flex
        flex-wrap wrap

.entry-content
        overflow-wrap break-word

.entry-footer.-sharelinks
        justify-content space-around

.nomatch-contents > .links
        justify-content space-between

/* in 404.php article dont FlexBox */
.nomatch-contents
.nomatch-contents .link
        display block

/**
 * # Margin and Padding
 */
.site-name
        margin 0

.page-title
.entry-title
        margin 0 0 .7rem 0

.page-title
        padding 0 .5rem 0 1.5rem

.entry-title
        padding 0

.comments-list-header
.comment-reply-title
        padding-left 0

.entry-content
.nomatch-contents
        > *:first-child
                margin-top 0

.link-posts > p
.entry-comments
        margin-top .6rem

.content-footer
        margin-top 1rem

.icon
        margin-right .4rem

.entry-category
.entry-tags
        > .icon
                margin-right .6rem

.icon-angle-right
        margin-left .4rem

.page-numbers
        margin-left .75rem

.link-posts > .movedate a:first-child
        margin-right 1rem

.site-description
        margin-right .75rem

.footer-author
.nomatch-contents .links
.nomatch-contents .description
        margin-bottom 1rem

.entry-author
        margin-bottom .75rem

.type-post
.type-page
.widget
.entry-header
.entry-title
        margin-bottom .6rem

.excerpt-thumbnail img
        margin 0 auto
        display block

.site-footer
        margin .5rem 0

.link-posts > p
        padding .25rem 0

.side-widgets
        padding .1rem 1rem .8rem

/**
 * # Typograghy
 */
body,pre,code
        font-family Hiragino Kaku Gothic ProN,Meiryo,sans-serif

h1,h2,h3,h4,h5,h6
.entry-title
.site-description
.front-navmenu
.pagination
.entry-date
        font-family 'Ubuntu' ,'Meiryo' , sans-serif
        font-weight normal


/* font-size */
.page-title
        font-size 2.4rem

h1,h2,h3,h4,h5,h6
.navmenu-title
.entry-title
.wp-widget > .title
.entry-footer > .link
.comments-list-header
.comment-reply-title
        font-size 1.62rem

.pagination
        font-size 1.4rem

.nomatch-contents .link
.entry-date
        font-size 1.25rem

/* Font Color */
:visited
        color maroon

a
.icon-eject
.entry-title
        color bright-h

h1,h2,h3,h4,h5,h6
.navmenu-title
.page-title
.comment-reply-title
.comments-list-header
.entry-meta i
.wp-widget > .title
.pagination
        color nakano-h

.site-footer
.site-description
        color hai

.site-name > .link
.entry-footer > .link
        color shirohanada

.side-widgets
.page-title
.pagination
.nomatch-contents
.link-posts > p
.type-page
.type-post
        background-color usu-hai

/* SNS Symbolcolor for share links */
@import "_sns-color"

/* Text Decolation */
a:hover
.page-numbers.current
        text-decoration-line underline

a:hover
        text-decoration-style dotted

.page-numbers.current
        text-decoration-style solid

.site-name > .link
.entry-footer > .link
        text-decoration none

.author-name
        vertical-align -3px

.wp-caption
.gallery-caption
.link-posts
        text-align center

/* Table */
tr + tr
        border-top 1px solid hai

/**
 * Inner Contets
 */
.entry-content
.comment-body
        dd
        pre
        p
                clear both
                margin 0 auto 1.5rem

        ul
        ol
                margin 1rem 0 1rem 2rem

        dt
                display inline-block
                font-weight bold
                border-bottom solid 1px hai


        dt + dd
                margin-top .2rem
                padding-top .2rem

        img
                margin-top .3rem
                margin-bottom .3rem

        blockquote
                border-left solid 3px border-hai
                margin .8rem 0
                padding 1rem
                cite::before
                      content "\2014"
                      margin-right .25rem
                p
                      margin 0

                p + p
                      margin-top 1rem

        > *:last-child
                  margin-bottom 2rem

        thead
                background-color #eee

        td
        th
                padding .2rem .5rem

        caption
                text-align left


        /* List */
        ul
                list-style-type square

        li + li
                margin-top 0.6rem

        hr
                margin 2rem 0
                border-top 1px solid border-hai

        /* Gutenberg classes */
        .blocks-gallery-item
                flex-grow unset

        .wp-block-pullquote blockquote
                border-width 4px 0
                border-color border-hai
                padding 3rem 0

        /* H tags in entry-content; WordPress Post or Page content */
        & h1
                font-size 2rem
        & h2
        & h3
        & h4
        & h5
        & h6
                clear both

        & h1
        & h2
        & h3
        & h4
        & h5
        & h6
                font-size 1.2857rem

        & h1
                color shirohanada

        & h2
        & h3
        & h4
        & h5
        & h6
                color nakano-h

        & h2
                border-left solid 3px nakano-h

        & h3
                border-left double nakano-h

        & h4
                border-left solid 2px nakano-h

        & h5
                border-bottom solid 1px nakano-h

        & h1
        & h2
                margin 2rem 0 1rem

        & h3
        & h4
                margin 1rem 0

        & h5
                margin .8rem 0 .5rem
                width fit-content
                width -moz-fit-content

        & h1
        & h2
        & h3
        & h4
                padding-left .75rem

        & h5
        & h6
                padding 0 .5rem

/**
 * # WordPress Classes
 */
.aligncenter
.alignleft
.alignright
        display block

.alignleft
        float left
        margin-right 1rem

.alignright
        float right
        margin-left 1rem

.aligncenter
        margin 0 auto

.wp-caption
        > p
                margin-top .2rem
                padding-top 0

.sticky
        border solid 1px shirohanada

.comment-reply-list
        list-style-type none

.screen-reader-text
        display none

/**
 * # Helper Classes
 */
.clearfix
        clearfix()

._text-alignright
        text-align right


._text-centering
        text-align center

ul._no-marker
ol._no-marker
        list-style-type none
        margin-left 0

._color-dark
        color nakano-h

@media (min-width:breakpoint)
        ._inline
                display inline

        ._halfwidth-inlarge
                width 50%

/* Parts Section */
/* gravatar */
img[src^="http://www.gravatar.com/avatar/"]
        border-radius .5rem

.entry-author > .avatar
        border-radius 50%

/**
 * # Widget
 */
.side-widgets

        /* On chrome overflow long text, example url ,1byte japanese kana */
        word-break break-all
        .wp-widget
                margin-bottom 1rem

/* side-widgets skin */
.wp-widget
    > .title
            margin 0 0 0.25rem 0
            padding-left 0

    ul
            list-style-type none

    li + li
            padding-top .7rem
            margin-top .4rem
            border-top solid 1px hai

    /* Calendar table does not use "class" propety */
    #wp-calendar
            width 90%
            margin 0 auto
            word-break keep-all //date should not break

            th
                    font-size .875rem
                    font-weight normal
                    background-color none
            td
                    padding .4rem .3rem .1rem
                    text-align center

/**
 * # IconButton
 */
.show-menu
.go-top
.hide-menu
      font-size 2.4rem

.show-menu
.go-top
      color white
      position fixed
      border-radius 0 .5rem .5rem 0
      background-color shirohanada
      text-decoration none !important
      z-index 99

.show-menu
.show-menu:visited
      color white

.show-menu
      bottom 1rem
      padding .4rem .7rem 0 .7rem
      opacity 0.85

.go-top
      bottom 3rem
      padding .6rem .8rem 0 1rem


.hide-menu
      color nakano-h
      padding-top .5rem
      display none
      width 100%
      text-align right

.-show
      display block

.-hide
      display none

/**
 * # Medeia Query
 * # For Large Display
 */
@media (min-width:breakpoint)

    .entry-date
            display flex
            align-items center

    .site-header
            margin-right 0.75rem

    .site-header
    .site-footer
            text-align right

    .site-name
            font-size 72px

    .entry-title
            font-size 2rem
            line-height 1.4
            margin .5rem 0
            &.excerpt
                font-size 1.62rem

    .type-post
            padding 0 1rem 1rem

    .type-page
            padding 1.5rem 2rem 1rem

    .article-area
    .entry-content
    .entry-comments
    .entry-title
    .entry-excerpt
            width 76%

    .side-widgets
    .entry-margin
    .entry-header
    .entry-date
    .entry-meta
            width 23%

    .entry-excerpt._with-thumbnail
    .excerpt-thumbnail
            width 37%

            img
                    max-width 100%
                    margin 0 auto
                    display block

    .entry-margin
    .entry-header
            margin-right 1%

    .excerpt-thumbnail
            margin-left 1%

    .site-description
            margin-bottom .5rem

    .entry-content
    .entry-comments
            min-width 550px

    .is-pagetemplate > .entry-footer
            width 50%

    /* show only in small display */
    .show-menu
            display none

/**
 * # For mobile
 */
@media screen and (max-width: breakpoint)
    .article-area
    .side-widgets
    .entry-title
    .entry-header
    .entry-content
              width 100%

    .return-articletop
              width 23%
              margin initial
              margin-left .5rem

    .excerpt-thumbnail
    .entry-footer
              width 90%
              margin auto

    .site-name
              font-size 2.8rem

      /* Header is white logo above "shirohanada" */
    .site-name
              text-align center
              background-color shirohanada

              > .link
                        color white

    .entry-title
    .page-title
              margin initial
              font-size 2rem

    .entry-title
              order -1

    .entry-date
              font-size 1rem
              margin-bottom .75rem

    .page-title
              padding .75rem .5rem

    .entry-meta
              display flex
              justify-content space-between
    .entry-meta
              margin-bottom 1rem

    .entry-author
    .entry-category
    .entry-tags
              margin-right 1rem
              display inline

    .excerpt-thumbnail
              margin-top 1rem

    .type-post
    .type-page
              margin-bottom 0
              padding 0 .5rem 1.5rem

    .entry-content
              padding-bottom .75rem

              img
                        max-width 100%

    .type-post + .type-post
              border-top solid 1px border-hai
              padding-top 1rem

    .site-footer
              text-align right
              width 90%
              margin-left 9%

              &.-front
                        text-align left
                        width 100%
                        margin-left 0

    ._mobile-disiable
              display none

    .article-area
              margin-bottom 1rem

    .-ontop
              position absolute
              box-shadow -1px 1px 1px 2px rgba(0,0,0,0.2)
              top 4px
              right 3px
              width 60%
              animation-name slideup
              animation-duration 0.3s

              @keyframes slideup
                      0%
                                width 100%
                                position absolute
                                top 100%
                                width 60%

                      100%
                                top 4px
                                right 3px

    .side-widgets #wp-calendar td
              padding .4rem .2rem .1rem
              font-size .9rem

@import "_comment-form"
@import "_front-page"
