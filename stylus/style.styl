/* major breakpoint */
breakpoint = 768px

/* Stylus Library */
@import "nib"

/* import normalize,icon-font,color const module */
@import "_sanitize"
@import "_icon-font"
@import "_color"

/*! Main Section

    'Every Declaration Just Once'
    ref 'https://developers.google.com/speed/articles/optimizing-css'

    Naming rule is 'RSCSS'
    ref 'https://github.com/rstacruz/rscss'
    ref 'http://rscss.io/index.html' */

/* Base */
body
        font-family Hiragino Kaku Gothic ProN,Meiryo,sans-serif
        letter-spacing 0.05rem
        line-height 1.6
        margin 0 auto
        width 100%
        max-width 1240px

/* Layout */
.page > .entry-content
.page > .footer-date
.page > .footer-author
.page-footer
.entry-title
        width 100%


.entry-content img
.wp-caption
        max-width 100%

.entry-content img
        height auto

.side-widgets
        margin-left 1%

.entry-footer
        width 38%

.main-contents
.post
.page
.entry-footer.-sharelinks
        display flex
        flex-wrap wrap

.entry-footer.-sharelinks
        justify-content space-around

/* in 404.php article dont FlexBox */
.nomatch-contents
        display block

/* Box -Margin and Padding */
.site-name
        margin 0

.page-title
.entry-title
        margin 0 0 .7rem 0

.page-title
        padding 0 .5rem 0 1.5rem

.entry-title
        padding 0

.comments-list-header
.comment-reply-title
        padding-left 0

.entry-content
.nomatch-contents
        > *:first-child
                margin-top 0

.nomatch-contents
        > .reasons
                margin-left 2rem

.link-posts > p
.entry-comments
li + li
        margin-top .6rem

.content-footer
        margin-top 1rem

.icon
        margin-right .4rem

.entry-date
.entry-category
.entry-tags
        > .icon
                margin-right .6rem

.icon-angle-right
        margin-left .4rem

.page-numbers
        margin-left .75rem

.link-posts > .movedate
        a:first-child
                margin-right 1rem

.site-description
        margin-right .5rem

.footer-date
        margin-bottom 1rem

.post
.page
.widget
.entry-header
.entry-title
        margin-bottom .6rem

.entry-content
        p
                margin .75rem 0

        ul
        ol
                margin 1rem
                margin-left 2rem

        dl
                margin-left 0

                dt
                        display inline-block
                        font-weight bold
                        border-bottom solid 1px hai


                dt + dd
                        margin-top .2rem
                        padding-top .2rem

                dd
                        margin-bottom 1rem

.site-footer
        margin 0.5rem

.link-posts > p
        padding .25rem 0

.side-widgets
        padding .1rem 1rem .8rem

blockquote
        margin .8rem 0
        padding .2rem .75rem
        overflow-wrap break-word

/*  Typograghy  */
h1,h2,h3,h4,h5,h6
.site-description
.front-navmenu
.pagenation
        font-family 'Ubuntu' ,'Meiryo' , sans-serif
        font-weight normal


/*  font-size  */
.page-title
        font-size 2.4rem

h1,h2,h3,h4,h5,h6
.navmenu-title
.entry-title
.wp-widget > .title
.entry-footer > .link
.comments-list-header
.comment-reply-title
        font-size 1.62rem

.pagenation
        font-size 1.4rem

/* Color
 * ShiroHanada #a3d8f6 */
:visited
        color maroon

a
.icon-eject
.entry-title
        color bright-h

h1,h2,h3,h4,h5,h6
.navmenu-title
.page-title
.comment-reply-title
.comments-list-header
.wp-widget > .title
.pagenation
        color nakano-h

.entry-header i
.site-footer
.site-description
        color hai

.site-name > .link
.entry-footer > .link
        color shirohanada

.side-widgets
.page-title
.pagenation
.nomatch-contents
.link-posts > p
.page
.post
        background-color usu-hai

@import "_icon-color"

/* Text Decolation */
a:hover
page-numbers.current
        text-decoration-line underline

a:hover
        text-decoration-style dotted

page-numbers.current
        text-decoration-style solid

.site-name > .link
.entry-footer > .link
        text-decoration none

/* Text-align */
.wp-caption
.link-posts
        text-align center

/* Border */
blockquote
        border-left solid 3px #bbb

/* Table */
tr + tr
                border-top 1px solid hai


.entry-content
        thead
                background-color #eee

        td
        th
                padding .2rem .5rem

        caption
                text-align left


/* List style */
.entry-content
       ul
               list-style-type square

.comment-reply-list
        list-style-type none

/* h tags in entry-content; WordPress Post or Page content */
.entry-content
        & h1
        & h2
        & h3
        & h4
        & h5
        & h6
                margin 2rem 0 1rem
                padding-left .75rem
                border-left solid 3px nakano-h
                clear both


/* End Main Section */

/* For WordPress classes */
.aligncenter
.alignleft
.alignright
        display block

.alignleft
        float left
        margin-right 1rem

.alignright
        float right
        margin-left 1rem

.aligncenter
        margin auto

.wp-caption > p
        padding-top .3rem

.sticky
        border solid 1px shirohanada

/* Helper Classes */
.clearfix
        clearfix()

._text-alignright
        text-align right


._text-centering
        text-align center

._no-marker
        list-style-type none

@media (min-width:breakpoint)
        ._inline
                display inline

        ._halfwidth-inlarge
                width 50%

/* Parts Section */
/* gravatar */
img[src^="http://www.gravatar.com/avatar/"]
        border-radius .5rem

/* Side Bar */
.side-widgets

        /* On chrome overflow long text, example url ,1byte japanese kana */
        word-break break-all
        .wp-widget
                margin-bottom 1rem

/* side-widgets skin */
.wp-widget
        > .title
            margin 0 0 0.25rem 0
            padding-left 0

        ul
            list-style-type none

        li + li
                padding-top .7rem
                margin-top .4rem
                border-top solid 1px hai

        /* Calendar table does not use "class" propety */
        #wp-calendar
                width 90%
                margin 0 auto
                word-break keep-all //date should not break

                th
                        font-size .875rem
                        font-weight normal
                        background-color none
                td
                        padding .4rem .3rem .1rem
                        text-align center

/* Navigation IconButton */
.show-menu
.go-top
.hide-menu
        font-size 2.4rem

.show-menu
.go-top
        color white
        position fixed
        border-radius 0 .5rem .5rem 0
        background-color shirohanada
        text-decoration none !important

.show-menu
.show-menu:visited
        color white

.show-menu
        bottom 1rem
        padding .4rem .7rem 0 .7rem
        border-radius 0 .5rem .5rem 0
        opacity 0.85

.go-top
        bottom 3rem
        padding .6rem .8rem 0 1rem


.hide-menu
        color nakano-h
        padding-top .5rem
        display none
        width 100%
        text-align right

.-show
        display block

.-hide
        display none

/* Medeia Query */
/* For Large Display */
@media (min-width:breakpoint)

        .site-header
                margin-right 0.75rem

        .site-header
        .site-footer
                text-align right

        .site-name
                font-size 72px

        .post
        .page
                padding .5rem 1rem 1rem

        .article-area
        .entry-content
        .entry-comments
                width 76%

        .side-widgets
        .entry-margin
        .entry-header
                width 23%

        .entry-margin
        .entry-header
                margin-right 1%

        .site-description
                margin-bottom .3rem

        .entry-content
        .entry-comments
                min-width 560px

        .site-footer
                > .copyright
                > .poweredby
                        margin-left 1rem


        /* show only less 768px */
        .show-menu
                display none

        .page > .entry-footer
                width 50%

/* For mobile */
@media screen and (max-width: breakpoint)
        .article-area
        .side-widgets
        .entry-title
        .entry-header
        .entry-content
                width 100%

        .return-articletop
                width 23%
                margin initial
                margin-left .5rem

        .entry-footer
                width 90%
                margin auto

        .site-name
                font-size 2.8rem

        /* Header is white logo above "shirohanada" */
        .site-name
                text-align center
                background-color shirohanada

                > .link
                        color white

        .site-name
                padding .25rem .5rem

        .site-description
                margin .25rem .5rem

        .entry-title.single
        .page-title
                margin initial
                font-size 1.62rem

        /* In .post set less padding */
        .entry-title.single
                padding 1rem 0

        .page-title
                padding 1rem .5rem

        .entry-date
        .entry-category
        .entry-tags
                margin-right 1rem
                display inline

        .post
        .page
                margin-bottom 0
                padding 0 .5rem 1rem

        .entry-content
                padding-bottom .75rem

                img
                        max-width 100%
                        height auto
        .post + .post
                padding-top 1rem
                border-top solid 1px #777

        .site-footer
                text-align right
                width 90%
                margin-left 9%

                &.-front
                        text-align left
                        width 100%
                        margin-left 0

        ._mobile-disiable
                display none

        .article-area
                margin-bottom 1rem

        .-ontop
                position absolute
                box-shadow -1px 1px 1px 2px rgba(0,0,0,0.2)
                top 5px
                right 3px
                width 60%

        .side-widgets #wp-calendar td
                padding .4rem .2rem .1rem
                font-size .9rem

@import "_comment-form"
@import "_front-page"
