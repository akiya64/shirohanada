/*
 * # Front-Page Section
 */

/* layout */
/* left-part is banner,right-part is logo , front-navmenu , widget area
   in small display, 1column Logo-Banner-DropdownPart */

.front-main
        display flex
        flex-flow column wrap

.headerimg-box
        height 700px

.headerimg-box
.headerimage
        max-width 700px

/* for large display */
@media (min-width:minor-breakpoint)
        .front-main
                width 1240px
                height 700px
                position absolute
                top 0
                bottom 0
                left 0
                right 0
                margin auto auto
                border-radius 20px
                border solid 1px #999
                box-sizing content-box
                box-shadow 9px 12px 9px 0px rgba(180, 180, 180, 0.8)

        .headerimage
        .headerimg-box
                border-radius 20px 0 0 20px

.site-header.-front
.dropdown-part
.top-page-footer
        width 480px

.front-navmenu
        font-size 1.2rem
        margin-bottom 1rem
        -moz-columns 2 10rem
        -webkit-columns 2 10rem
        columns 2 10rem

/* front-page widget content area */
.front-navmenu
        height auto
        max-height 180px

.site-header.-front
        text-align right

.site-header.-front
.wp-widget.-front
        margin-bottom .5rem

.site-name.-front
        color shirohanada

.wp-widget.-front
        ul
                margin-left 1rem

        li + li
                padding initial
                margin-top .5rem
                border none

        h2 ~ *
                max-height 160px
                overflow auto

/* top skin  */
.navmenu-title
        margin 0 0 .3rem 0
        padding-left 0
        border-left 0

.menu-item
        color bright-h
        display block
        padding 0.2rem 1rem
        border-left solid 3px #fff

        &:hover
            border-left solid 3px bright-h

        & a:hover
            text-decoration none

.site-footer
        &.-front
                color hai
                margin-top 1rem
                padding-top 1rem

/* layout for small display ;1column layout */

@media screen and (max-width: minor-breakpoint)
        .site-header.-front
        .front-main
        .headerimg-box
        .dropdown-part
        .front-navmenu
        .front.widget-area ul
        .wp-widget.-front h2 ~ *
                width initial
                height initial
                max-width initial
                max-height initial

        .front-main
        .site-header.-front
        .headerimg-box
        .headerimage
                width 100%

        .headerimage
                height auto

        .site-name.-front
                color shirohanada
                text-align right
                background-color white

        .front-main
                margin 0 auto

        .site-header.-front
                order 1
                margin-right .3rem

        .headerimg-box
                order 2

        .dropdown-part
                order 3

        .dropdown-part
                margin initial
                padding 0 .5rem

        .dropdown-part h2
                margin 0.8rem 0

        .site-footer
                &.-front
                        padding .5rem 1rem
