/* Front-Page Section */

/* layout */
/* left-part is banner,right-part is logo , root-contents , widget area
   in small display, 1column Logo-Banner-DropdownPart */

.top-flex-container
        width 1240px
        height 700px
        margin 9vh auto 0
        display flex
        flex-flow column wrap

.top-banner-box
        height 700px

.top-banner-box
.top-banner
        max-width 700px

.top-banner
        max-height 700px

.top-page-header
.dropdown-part
.top-page-footer
        width 480px
/*
.top-page-header
        height 9rem

.dropdown-part
        height 12rem
*/
.root-contents
        .menu
                font-size 1.2rem
                margin-bottom 1rem
                -moz-columns 2 10rem
                -webkit-columns 2 10rem
                columns 2 10rem

.front.widget-area h2 ~ *
.root-contents .menu
        height auto
        max-height 180px

.top-page-header
        text-align right

.top-page-header
.front.widget-area h2
        margin-bottom .5rem

.front.widget-area h2 ~ *
        overflow auto

.front.widget-area
        ul
                margin-left 1rem

.top-page-footer
        margin-top 1rem
        padding-left 1rem
        padding-top 1rem

/* top skin  */
h2.contents-link-title
        margin 0 0 .3rem 0
        padding-left 0
        border-left 0

.menu-item
        color bright-h
        display block
        padding 0.2rem 1rem
        border-left solid 3px #fff

        &:hover
            border-left solid 3px bright-h

        & a:hover
            text-decoration none

.top-page-footer
        color hai
        border-top solid 1px shirohanada

/* layout for small display ;1column layout */

@media screen and (max-width: 960px)
        .top-page-header
        .top-flex-container
        .top-banner-box
        .dropdown-part
        .root-contents
        .front.widget-area ul
                width initial
                height initial
                max-width initial
                max-height initial

        .top-flex-container
        .top-banner-box
        .top-banner
                width 100%

        .top-banner
                height auto

        .top-flex-container
                margin 0 auto

        .top-page-header
                order 1
                margin-right .3rem

        .top-banner-box
                order 2

        .dropdown-part
                order 3

        .dropdown-part
                margin initial
                padding 0 .5rem

        .dropdown-part h2
                margin 0.8rem 0

        .top-page-footer
                padding .5rem 1rem
