/* Front-Page Section */

/* layout */
/* left-part is banner,right-part is logo , front-navmenu , widget area
   in small display, 1column Logo-Banner-DropdownPart */

.top-flex-container
        width 1240px
        height 700px
        margin 9vh auto 0
        display flex
        flex-flow column wrap

.top-banner-box
        height 700px

.top-banner-box
.top-banner
        max-width 700px

.top-banner
        max-height 700px

.site-header.-front
.dropdown-part
.top-page-footer
        width 480px

.front-navmenu
        font-size 1.2rem
        margin-bottom 1rem
        -moz-columns 2 10rem
        -webkit-columns 2 10rem
        columns 2 10rem

/* front-page widget content area */
.front-navmenu
        height auto
        max-height 180px

.site-header.-front
        text-align right

.site-name.-front
.site-description.-front
        display block

.site-header.-front
.wp-widget.-front
        margin-bottom .5rem

.site-name.-front
        color shirohanada

.wp-widget.-front
        ul
                margin-left 1rem

        li + li
                padding initial
                margin-top .5rem
                border none

        h2 ~ *
                max-height 160px
                overflow auto

/* top skin  */
.navmenu-title
        margin 0 0 .3rem 0
        padding-left 0
        border-left 0

.menu-item
        color bright-h
        display block
        padding 0.2rem 1rem
        border-left solid 3px #fff

        &:hover
            border-left solid 3px bright-h

        & a:hover
            text-decoration none

.site-footer
        &.-front
                color hai
                border-top solid 1px shirohanada
                margin-top 1rem
                padding-top 1rem

/* layout for small display ;1column layout */

@media screen and (max-width: 960px)
        .site-header.-front
        .top-flex-container
        .top-banner-box
        .dropdown-part
        .front-navmenu
        .front.widget-area ul
                width initial
                height initial
                max-width initial
                max-height initial

        .top-flex-container
        .site-header.-front
        .top-banner-box
        .top-banner
                width 100%

        .top-banner
                height auto

        .site-name.-front
                color shirohanada
                text-align right
                background-color white

        .top-flex-container
                margin 0 auto

        .site-header.-front
                order 1
                margin-right .3rem

        .top-banner-box
                order 2

        .dropdown-part
                order 3

        .dropdown-part
                margin initial
                padding 0 .5rem

        .dropdown-part h2
                margin 0.8rem 0

        .site-footer
                &.-front
                        padding .5rem 1rem
                        font-size .875rem
